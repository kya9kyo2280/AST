<h1>投稿一覧</h1>
<div>
 <%= link_to "ジャンルを追加", new_admin_genre_path, class: "btn w-100 btn-add" %>
      </div>
 <%= link_to "媒体を追加", new_admin_medium_path, class: "btn w-100 btn-add" %>

 <%= link_to "ユーザーズ", admin_users_path, class: "btn w-100 btn-add" %>
      </div>
 <%= link_to "お問合せ一覧", admin_contacts_path, class: "btn w-100 btn-add" %>
      </div>
  <table class="table table-striped">
  <thead>
    <tr>
      <th> Image</th>
      <th> Title</th>
      <th> Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @studies.each do |s| %>

    <tr>

      <td>
       <div>
        <%= attachment_image_tag s, :image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %>
       </div>
      </td>
      <td><%= link_to s.study_title, admin_study_path(s.id) %></td>
      <td><%= s.review %></td>

    </tr>
    <% end %>
  </tbody>
</table>