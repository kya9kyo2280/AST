  <div class="container"style="padding: 20px;">
      <div class="row">
        <div class="col-3">
        </div>
        <div class="col-5">
     			 <%= form_with url: purposes_path do |f| %>
           		 <table  border="1" bordercolor="#4682B4" cellpadding="15" style="width:100%; border-collapse:separate;margin-top: 50px;">
              	<tr><td colspan="2"><h2>設定</h2></td></tr>
      			     <tr>
                  	<th style = "width:30%"><%= f.label :"目標" %></th>
                  	<td style = "width:70%"><%= f.number_field :purpose_score, autofocus: true, class: "form-control" %></td>
                	</tr>

                	<tr>
                  	<th><%= f.label :"現在のスコア" %></th>
                  	<td><%= f.number_field :current_score, class: "form-control" %></td>
                	</tr>

                <tr>
                  <td colspan="2"><%= f.submit "送信", class: "btn btn-primary btn-block" %></td>
                </tr>
            </table>
          <% end %>
    	</div>
  	</div>
  </div>
