
<div class="container"style="padding: 20px;">
    <div class="row">
      <div class="col-3">
      </div>
      <div class="col-5">
   			<%= form_for(@contact) do |f| %>
     		 <table  border="1" bordercolor="#4682B4" cellpadding="15" style="width:100%; border-collapse:separate;margin-top: 50px;">
        	<tr><td colspan="2"><h2>お問合せ</h2></td></tr>
            	<tr><th><%= f.label :"タイトル" %></th></tr>
            	<tr><td><%= f.text_field :contact_title, class: "form-control" %></td></tr>

            	<tr><th><%= f.label :"本文" %></th></tr>
            	<tr><td><%= f.text_area :contact_message , class: "form-control" %></td></tr>
    

          <tr>
            <td colspan="2"><%= f.submit "送信", class: "btn btn-primary btn-block" %></td>
          </tr>
      </table>
    <% end %>
  	</div>
	</div>
</div>
