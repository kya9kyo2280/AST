<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'application', media:'all'%>
    <%= javascript_include_tag 'application','data-turbolinks-track':'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>AST</title>

  </head>

  <body>

   <header class="sticky-top">

      <nav class="navbar">
        <a class="navbar-brand" href="/"><%= image_tag('image8.png', size: '90x50') %></a>
        <div class="nav-content">
          <ul class="list-group list-group-horizontal nav-list ">

           <% if admin_signed_in? %>
               <li class="list-inline-item nav-list-item">
                <%= link_to "レビュー一覧", admin_studies_path %>
              </li>
              <li class="list-inline-item nav-list-item">
                <%= link_to "ジャンルを追加", new_admin_genre_path %>
              </li>

              <li class="list-inline-item nav-list-item">
             <%= link_to "媒体を追加", new_admin_medium_path  %>
              </li>

              <li class="list-inline-item nav-list-item">
              <%= link_to "ユーザー一覧", admin_users_path %>
              </li>

              <li class="list-inline-item nav-list-item">
               <%= link_to "お問合せ一覧", admin_contacts_path %>
              </li>

              <li class="list-inline-item nav-list-item">
                <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>


            <% elsif user_signed_in? %>

               <li class="list-inline-item nav-list-item">
                <%= link_to user_path(current_user.id)  do%>
                <span class="glyphicon glyphicon-home" aria-hidden="true"></span> マイページ
                <%end%>
              </li>

              <li class="list-inline-item nav-list-item">
              <%= link_to users_path  do%>
              <span class="glyphicon glyphicon-book" aria-hidden="true"></span> ランキング
              <%end%>
              </li>

              <li class="list-inline-item nav-list-item">
              <%= link_to studies_path  do%>
              <span class="glyphicon glyphicon-book" aria-hidden="true"></span> レビュー
              <%end%>
              </li>

              <li class="list-inline-item nav-list-item">
               <%= link_to new_contact_path  do%>
               <span class="glyphicon glyphicon-home" aria-hidden="true"></span> お問合せ
               <%end%>
              </li>

              <li class="list-inline-item nav-list-item">
                <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>


    <% else %>

        <li class="list-inline-item nav-list-item">
         <%= link_to root_path  do%>
        <span class="glyphicon glyphicon-home" aria-hidden="true"></span> レビュー
        <%end%>
      </li>

       <li class="list-inline-item nav-list-item">
          <%= link_to about_path  do%>
        <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> はじめに
        <%end%>
      </li>

        <li class="list-inline-item nav-list-item">
          <%= link_to new_user_registration_path  do%>
        <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> 登録
        <%end%>
      </li>

        <li class="list-inline-item nav-list-item">
        <%= link_to new_user_session_path  do%>
        <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> ログイン
        <%end%>
      </li>

   <% end %>
          </ul>

        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>

<footer>
    </footer>

